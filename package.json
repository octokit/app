{
  "name": "@octokit/app",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.0-development",
  "description": "GitHub Apps toolset for Node.js",
  "main": "index.js",
  "scripts": {
    "build": "pack build",
    "lint": "prettier --check {src,test}/* README.md package.json",
    "lint:fix": "prettier --write {src,test}/* README.md package.json",
    "pretest": "npm run -s lint",
    "test": "jest --coverage",
    "validate:ts": "tsc -p tsconfig.json --noEmit"
  },
  "repository": "https://github.com/octokit/app.js",
  "author": "Bex Warner",
  "contributors": [
    {
      "name": "Gregor Martynus",
      "url": "https://github.com/gr2m"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/octokit/app.js/issues"
  },
  "homepage": "https://github.com/octokit/app.js#readme",
  "types": "index.d.ts",
  "dependencies": {
    "@octokit/request": "^5.0.0",
    "jsonwebtoken": "^8.3.0",
    "lru-cache": "^5.1.1"
  },
  "devDependencies": {
    "@pika/pack": "^0.4.0",
    "@pika/plugin-build-node": "^0.5.1",
    "@pika/plugin-build-web": "^0.5.1",
    "@pika/plugin-bundle-web": "^0.5.1",
    "@pika/plugin-ts-standard-pkg": "^0.4.0",
    "@types/jest": "^24.0.13",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/lolex": "^3.1.1",
    "@types/lru-cache": "^5.1.0",
    "@types/nock": "^10.0.3",
    "@types/simple-mock": "^0.8.1",
    "jest": "^24.8.0",
    "lolex": "^4.0.1",
    "nock": "^10.0.2",
    "pika-plugin-unpkg-field": "^1.1.0",
    "prettier": "^1.17.1",
    "semantic-release": "^15.12.1",
    "simple-mock": "^0.8.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-bundle-web",
        {
          "browser": true
        }
      ],
      [
        "pika-plugin-unpkg-field"
      ]
    ]
  }
}
